<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:id="@+id/linear_layout_request_image"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/ivReviewImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/request_kitten"
            tools:src="@mipmap/ic_launcher"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/linear_layout_request_image"
        android:id="@+id/linear_layout_begin_date"
        android:paddingBottom="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_height="wrap_content"
            android:text="Select Dates"
            android:id="@+id/tvSelectDates"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etSelectDates"
            android:layout_gravity="center"
            android:drawableRight="@mipmap/ic_calender"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:id="@+id/linear_layout_pet_type"
        android:layout_below="@+id/linear_layout_begin_date"
        android:paddingBottom="20dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="Pet type"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/tvReviewPetType"/>

        <Spinner
            android:layout_gravity="center_horizontal"
            android:id="@+id/spPetType"
            android:spinnerMode="dropdown"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_below="@id/linear_layout_pet_type"
        android:id="@+id/linear_layout_note"
        android:paddingBottom="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_height="wrap_content"
            android:text="Send a note"
            android:id="@+id/tvNote"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etNote"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:id="@+id/linear_layout_action_buttons"
        android:layout_below="@id/linear_layout_note"
        android:layout_gravity="center"
        android:layout_centerInParent="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CANCEL"
            android:id="@+id/btnCancel"
            android:gravity="center"
            android:textColor="@color/white"
            android:backgroundTint="@color/colorPrimary"
            android:textAppearance="?android:attr/textAppearanceMedium"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SEND"
            android:id="@+id/btnSend"
            android:gravity="center"
            android:backgroundTint="@color/darkorange"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </LinearLayout>
</RelativeLayout>