<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:minWidth="1000dp"
    android:minHeight="450dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:id="@+id/linear_layout_review_image"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/ivReviewImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/review_kitten"
            tools:src="@mipmap/ic_launcher"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:id="@+id/linear_layout_review_pet_type"
        android:layout_below="@+id/linear_layout_review_image"
        android:paddingBottom="20dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="Pet type"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/tvReviewPetType"/>

        <Spinner
            android:layout_gravity="center_horizontal"
            android:id="@+id/spReviewPetType"
            android:spinnerMode="dropdown"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_below="@id/linear_layout_review_pet_type"
        android:id="@+id/linear_layout_review"
        android:paddingBottom="20dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Review"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/tvReview"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="4"
            android:ems="4"
            android:id="@+id/etReview"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_layout_review"
        android:id="@+id/linear_layout_review_rating"
        android:gravity="center_vertical"
        android:paddingBottom="20dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Rating"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/tvReviewRating"
            />

        <RatingBar
            android:id="@+id/rbReviewRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/ratingBarStyle"
            android:progressTint="@color/darkorange"
            android:layout_gravity="center_horizontal"
           />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear_layout_review_action_buttons"
        android:layout_below="@id/linear_layout_review_rating"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_centerInParent="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CANCEL"
            android:id="@+id/btnReviewCancel"
            android:gravity="center"
            android:backgroundTint="@color/colorPrimary"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white" />

        <Button
            android:layout_width="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_height="wrap_content"
            android:text="SAVE"
            android:backgroundTint="@color/darkorange"
            android:id="@+id/btnReviewSave"
            android:gravity="center" />

    </LinearLayout>

</RelativeLayout>